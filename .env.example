# rAthena Docker Compose Environment Variables
# Copy this file to .env and customize for your setup

# ==========================================
# MySQL Database Configuration
# ==========================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=rathena_renewal
MYSQL_USER=rathena
MYSQL_PASSWORD=rathena_pass
MYSQL_PORT=3306

# ==========================================
# Server Mode Configuration
# ==========================================
# Use "renewal" for Renewal mode, "classic" for Pre-Renewal mode
SERVER_MODE=renewal
# Must match SERVER_MODE: "true" for renewal, "false" for classic
RENEWAL=true

# ==========================================
# Server Display Configuration
# ==========================================
SET_SERVER_NAME=My rAthena Server
SET_INTERSRV_USERID=s1
SET_INTERSRV_PASSWD=p1

# ==========================================
# Network Configuration
# ==========================================
# For local testing, use 127.0.0.1
# For LAN/external access, use your host's IP address
SET_CHAR_PUBLIC_IP=127.0.0.1
SET_MAP_PUBLIC_IP=127.0.0.1

# ==========================================
# Gameplay Settings
# ==========================================
SET_PINCODE_ENABLED=no
SET_START_POINT=prontera,155,182
# Optional: SET_START_ZENNY=1000000
# Optional: SET_MAX_CONNECT_USER=100

# ==========================================
# IP Ban / Auto-Ban Settings
# ==========================================
# Enable/disable all IP ban features (yes/no)
SET_IPBAN_ENABLE=yes
# Enable/disable dynamic ban on repeated login failures (yes/no)
SET_IPBAN_DYNAMIC_PASS_FAILURE_BAN=yes
# Time window in minutes to track failed login attempts
SET_IPBAN_DYNAMIC_PASS_FAILURE_BAN_INTERVAL=5
# Number of failed attempts before banning
SET_IPBAN_DYNAMIC_PASS_FAILURE_BAN_LIMIT=7
# Ban duration in minutes
SET_IPBAN_DYNAMIC_PASS_FAILURE_BAN_DURATION=5
# Cleanup interval for expired bans in minutes
SET_IPBAN_CLEANUP_INTERVAL=60

# ==========================================
# Database Options
# ==========================================
# Set to 1 to drop and recreate database on next start (useful for testing)
MYSQL_DROP_DB=0
# Set to 1 to create test accounts (2 GMs + 300 bots)
MYSQL_ACCOUNTSANDCHARS=1

# ==========================================
# GM Account Configuration
# ==========================================
# Customize GM accounts created by accountsandchars.sql
# If not set, defaults will be used

# First GM Account (Default: Admin / Melon.77)
GM1_USER=Admin
GM1_PASS=Melon.77
GM1_CHAR=Admin
GM1_EMAIL=admin@ragnarok.com

# Second GM Account (Default: Almarc / Melon.77)
GM2_USER=Almarc
GM2_PASS=Melon.77
GM2_CHAR=Almarc
GM2_EMAIL=almarc@ragnarok.com

# GM Sex (Default: M)
GM_SEX=M

# ==========================================
# Port Mappings (Host:Container)
# ==========================================
# Change these if you have port conflicts
LOGIN_SERVER_PORT=6900
CHAR_SERVER_PORT=6121
MAP_SERVER_PORT=5121
WEB_SERVER_PORT=8888
MYSQL_HOST_PORT=3306
